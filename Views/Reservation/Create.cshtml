@model ReservationManager.Models.Reservation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var types = ViewBag.types;
    //var userId = ViewBag.userId;
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" value="Pending" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            @*<div class="form-group" >
                <input asp-for="Student.Id" type="hidden" class="form-control" value="@userId" />
            </div>*@
            <div class="form-group">
                <label asp-for="Cause" class="control-label"></label>
                <input asp-for="Cause" class="form-control" />
                <span asp-validation-for="Cause" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservationType.name" class="control-label"></label>
                @*<input asp-for="ReservationType.name" class="form-control" />
                <span asp-validation-for="ReservationType.name" class="text-danger"></span>*@

                <select asp-for="ReservationType.name" class="browser-default control-label custom-select">
                  <option selected>Open this select menu</option>
                    @foreach(var reserType in types)
                    {
                        <option value="@reserType.Id">@reserType.name</option>
                        
                    }
                </select>
                <span asp-validation-for="ReservationType.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
